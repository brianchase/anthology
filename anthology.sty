\newcommand{\page}[1]{%
  \ifvmode
    \ifdim\lastskip=0pt
      \marginnote{#1}%
    \else
      \noindent\marginnote{#1}%
    \fi
  \else
      \unskip
      \cleaders\copy\brkbox\hskip\wd\brkbox
      \marginnote{#1}\ignorespaces
  \fi}%

\newsavebox{\brkbox}%
\sbox{\brkbox}{$\,|\,$}%

