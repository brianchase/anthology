\renewcommand{\@makechapterhead}[1]{{%
  \thispagestyle{empty}
  \vspace*{10pt}%
  \begin{center}
    \ifappendix
      \ifoneappendix
        {\LARGE\appendixname}%
      \else
        {\LARGE\appendixname\ \thechapter}%
      \fi
    \else
      {\huge\thechapter}%
    \fi
    \par\nobreak
    \vspace*{10pt}%
    {\LARGE\itshape #1\par\normalfont\large\@textdate}%
    \vskip 1.6em
    {\large\@author\par\normalfont\normalsize\@authdate}%
    \gdef\@textdate{}%
    \gdef\@author{}%
    \gdef\@authdate{}%
  \end{center}
  \vskip 34pt
  \parindent 0pt}}%

